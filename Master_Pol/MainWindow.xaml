<Window x:Class="Master_Pol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Master_Pol"
        mc:Ignorable="d"
        Title="Anvarov MasterPol" Height="700" Width="1150" MinHeight="700" MinWidth="1150" Icon="/images/Мастер пол.ico">
    <Grid Background="#FFF4E8D3">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="images/Мастер пол.png" Grid.Row="0" HorizontalAlignment="Left" Margin="10"/>

        <TextBlock Text="Мастер Пол" FontFamily="Segoe UI" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Content="Назад" Name="BtnBack" Width="100" Height="40" Margin="10" HorizontalAlignment="Right" Click="BtnBack_Click"/>
        
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
